{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@homework-task/*": ["src/*"]
        },
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "target": "es6",
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "module": "esnext",
        "declaration": true,
        "declarationDir": "types",
        "outDir": "dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDeclarationOnly": true,
        "resolveJsonModule": true,
        "lib": ["dom", "dom.iterable", "esnext"]
    },
    "include": ["src"]
}
